\ProvidesPackage{beamerthemebasic}

\mode<presentation>

%-----------------------------------------------------------
% TEMPLATE
%-----------------------------------------------------------
\usetheme{default}
\useinnertheme{circles}
\setbeamertemplate{section in toc}[sections numbered]
\setbeamertemplate{subsection in toc}[square]
\setbeamertemplate{theorems}[numbered]

%-----------------------------------------------------------
% PACKAGES CONFIG
%-----------------------------------------------------------
\hypersetup{
	colorlinks=true,
	linkcolor=black,
	urlcolor=teal,
	citecolor=black
}

%-----------------------------------------------------------
% FONT
%-----------------------------------------------------------
\usefonttheme[onlymath]{serif}
\usefonttheme[onlylarge]{structurebold}

%-----------------------------------------------------------
% COLOR
%-----------------------------------------------------------
% main color
\definecolor{mainblue}{RGB}{0,48,135}
% color for background canvas
\setbeamercolor{background canvas}{bg=gray!15!white}
% color for navigation symbols
\setbeamercolor{navigation symbols dimmed}{fg=white}
% color for title of frame
\setbeamercolor{frametitle}{fg=black}

% color for blocks
\setbeamercolor{block title}{bg=mainblue!20!white,fg=mainblue}
\setbeamercolor{block body}{bg=mainblue!10!white,fg=black}

% color for alert
\definecolor{alertred1}{rgb}{0.925, 0.345, 0.345}
\definecolor{alertred2}{rgb}{0.97, 0.92, 0.92}
\setbeamercolor{block title alerted}{bg=alertred1!20!white,fg=alertred1}
\setbeamercolor{block body alerted}{bg=alertred2,fg=black}

% color for examples
\definecolor{examplegreen1}{rgb}{0.37, 0.7, 0.66}
\definecolor{examplegreen2}{rgb}{0.92, 0.97, 0.92}
\setbeamercolor{block title example}{bg=examplegreen1!20!white,fg=examplegreen1}
\setbeamercolor{block body example}{bg=examplegreen2,fg=black}

\definecolor{lakepurple}{RGB}{205,0,205}

